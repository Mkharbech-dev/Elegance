{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Elégance{% endblock %}

{% block content %}
    <div class="row detail-product">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price/100)|number_format(2,',','.')}} €</span>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add_to_cart',{'id':product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            <a href="{{ path('products') }}" class="btn btn-primary">Retour</a>
        </div>
    </div>
    <hr>
    <h3>Nos meilleures ventes </h3>
    <p>Découvrez les caftans les plus vendus.</p>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                {% include 'product/detail_product.html.twig' %}
            </div>
        {% endfor %}
    </div>
{% endblock %}